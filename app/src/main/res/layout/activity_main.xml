<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="Text will show here"
        android:textColor="#000"
        android:textSize="26sp"
        android:textStyle="normal" />

    <ImageView
        android:id="@+id/btnSpeak"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/txvResult"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="145dp"
        android:gravity="center"
        android:onClick="getSpeechInput"
        android:src="@mipmap/ic_mic" />


    <ImageView
        android:id="@+id/loadOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnSpeak"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/ic_toys_black_24dp" />

    <ImageView
        android:id="@+id/loadTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/loadOne"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/ic_toys_black_24dp" />

    <ImageView
        android:id="@+id/loadThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/loadTwo"
        android:layout_marginStart="29dp"
        android:layout_toEndOf="@+id/btnSpeak"
        app:srcCompat="@drawable/ic_toys_black_24dp" />

</RelativeLayout>
